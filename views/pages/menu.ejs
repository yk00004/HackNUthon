<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Smart Kitchen AI</title>
    <link rel="stylesheet" href="css/style.css">
    <script src="https://unpkg.com/lucide@latest"></script>
</head>

<body>
    <div class="app">
        <nav class="navbar">
            <div class="nav-content">
                <div class="nav-brand">
                    <i data-lucide="chef-hat" class="brand-icon"></i>
                    <span class="brand-text">AI KitchenMate</span>
                </div>
                    <button id="themeToggle" class="theme-toggle">
                        <i data-lucide="sun" class="theme-icon"></i>
                    </button>
                
            </div>
        </nav>

        <!-- Sidebar -->
        <div class="sidebar">

            <button data-section="inventory" class="sidebar-btn active" onclick="window.location.href='/inventory'">
                <div class="iconside">
                    <i data-lucide="refrigerator" class="sidebar-icon"></i>
                </div>
                <div class="textside">
                    <h4>Inventory</h4>
                </div>
            </button>

            <button data-section="prediction" class="sidebar-btn" onclick="window.location.href='/prediction'">
                <div class="iconside">
                    <i data-lucide="brain" class="sidebar-icon"></i>
                </div>
                <div class="textside">
                    <h4>Predictions</h4>
                </div>
            </button>
            <button data-section="menu" class="sidebar-btn" onclick="window.location.href='/menu'">
                <div class="iconside">
                    <i data-lucide="utensils" class="sidebar-icon"></i>
                </div>
                <div class="textside">
                    <h4>Menu</h4>
                </div>
            </button>
        </div>


        <!-- Main Content -->
        <div class="main-content">

            
            <!-- <div id="menu" class="section"> -->
                <div class="section-header">
                    <h1>Menu Optimization</h1>
                    <button class="action-btn">
                        <i data-lucide="sparkles" class="btn-icon"></i>
                        Generate Menu
                    </button>
                </div>

                <div class="grid">
                    <!-- AI Recipe Suggestions -->
                    <div class="card">
                        <h2>AI Recipe Suggestions</h2>
                        <div class="recipes">
                            <div class="recipe">
                                <div class="recipe-header">
                                    <i data-lucide="chef-hat" class="recipe-icon"></i>
                                    <span>Garden Fresh Pasta</span>
                                </div>
                                <p>Using surplus tomatoes and herbs</p>
                            </div>
                            <div class="recipe">
                                <div class="recipe-header">
                                    <i data-lucide="chef-hat" class="recipe-icon"></i>
                                    <span>Seasonal Risotto</span>
                                </div>
                                <p>With expiring vegetables</p>
                            </div>
                            <div class="recipe">
                                <div class="recipe-header">
                                    <i data-lucide="chef-hat" class="recipe-icon"></i>
                                    <span>Fusion Stir-fry</span>
                                </div>
                                <p>Optimized for current inventory</p>
                            </div>
                        </div>
                    </div>

                    <!-- Cost Analysis -->
                    <div class="card">
                        <h2>Cost Analysis</h2>
                        <div class="costs">
                            <div class="cost-item">
                                <span>Grilled Salmon</span>
                                <div class="price-info">
                                    <span class="cost">$12.50</span>
                                    <span class="price">$28.00</span>
                                </div>
                            </div>
                            <div class="cost-item">
                                <span>Vegetarian Bowl</span>
                                <div class="price-info">
                                    <span class="cost">$8.75</span>
                                    <span class="price">$22.00</span>
                                </div>
                            </div>
                            <div class="cost-item">
                                <span>Steak Dinner</span>
                                <div class="price-info">
                                    <span class="cost">$18.90</span>
                                    <span class="price">$42.00</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- AI Menu Creation -->
                    <div class="card">
                        <h2>AI Menu Creation</h2>
                        <div class="menu-creation">
                            <div class="special">
                                <h3>Today's Special</h3>
                                <p>AI-generated menu items based on current inventory and market trends</p>
                            </div>
                            <button class="secondary-btn">Generate New Special</button>
                        </div>
                    </div>
                </div>
            

        </div>


    </div>

    <script src="js/main.js"></script>
</body>

</html>